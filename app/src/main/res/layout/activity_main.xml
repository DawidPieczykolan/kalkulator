<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/soulution_tv"
        android:layout_width="384dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="685dp"
        android:textAlignment="textEnd"
        android:textColor="@color/royalblue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="389dp"
        android:layout_height="99dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="499dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/royalblue"
        android:textSize="34dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:orientation="vertical"
        android:paddingVertical="16dp">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="400dp"

        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_c"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/orange"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_open_bracket"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/green"
            android:text="("
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close_bracket"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/green"
            android:text=")"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multiply"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/tomato"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="474dp"
        android:layout_marginBottom="114dp"

        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/magenta"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/khaki"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/blueviolet"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/deeppink"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="378dp"
        android:layout_marginBottom="213dp"

        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/peru"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/seagreen"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/thistle"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/indianred"
            android:text='-'
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="299dp"
        android:layout_marginBottom="304dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@color/mediumpurple"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@color/silver"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/darkviolet"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/darkgoldenrod"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="585dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_ac"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/orchid"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="21dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/tan"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dot"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@color/lime"
            android:text="."
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equals"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="13dp"
            android:backgroundTint="@color/aqua"
            android:text='='
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp" />


    </LinearLayout>


</RelativeLayout>